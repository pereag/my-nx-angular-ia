{
  "$schema": "https://raw.githubusercontent.com/GoogleChrome/lighthouse-ci/main/packages/cli/src/schemas/lhcirc-schema.json",
  "ci": {
    "collect": {
      "startServerCommand": "npx http-server dist/apps/mini-crm/browser -p 8080 -c-1",
      "startServerReadyPattern": "Hit CTRL-C to stop the server",
      "url": ["http://localhost:8080"],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "chromeFlags": "--no-sandbox --headless"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.8 }],
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["warn", { "minScore": 0.8 }],
        "categories:seo": ["warn", { "minScore": 0.9 }],
        "color-contrast": "error",
        "label": "error",
        "button-name": "error",
        "link-name": "error",
        "image-alt": "error"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
